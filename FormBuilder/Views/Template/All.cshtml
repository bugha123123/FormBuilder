@using FormBuilder.Interface
@inject ITemplateService _templateService;

@{
    var result = await _templateService.GetFormTemplates();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Templates - FormBuilder</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-4">
                    <h1 class="text-2xl font-bold text-gray-900">Form Templates</h1>
                    <span class="text-sm text-gray-500">Choose from our collection of professional templates</span>
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action ="Create" asp-controller="Template">
                        <button class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                        <i class="fas fa-plus mr-2"></i>
                        Create Template
                        </button>
            </a>
                    <
                </div>
            </div>
        </div>
    </header>

    <!-- Search and Filter Bar -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <div class="flex-1">
                <div class="relative">
                    <input type="text" placeholder="Search templates..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                </div>
            </div>
            <div class="flex gap-2">
                <select class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                    <option>All Categories</option>
                    <option>Contact Forms</option>
                    <option>Survey Forms</option>
                    <option>Registration Forms</option>
                    <option>Feedback Forms</option>
                </select>
                <select class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                    <option>Sort by: Popular</option>
                    <option>Sort by: Newest</option>
                    <option>Sort by: Name</option>
                    <option>Sort by: Rating</option>
                </select>
            </div>
        </div>

        <!-- Templates Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var item in result)
            {
                <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 overflow-hidden">
                    <!-- Template Image -->
                    <div class="relative h-48">
                        <a asp-action="Details" asp-controller="Template" asp-route-id="@item.Id" class="block w-full h-full">
                            <img src="@(item.ImageUrl != null ? item.ImageUrl.Replace("/upload/", "/upload/c_fill,w_400,h_200/") : "/placeholder.svg?height=200&width=400")"
                                 alt="@($"{item.Title} preview")"
                                 class="w-full h-full object-cover" />
                        </a>
                    
                    </div>

                    <!-- Template Content -->
                    <div class="p-4">
                        <!-- Template Title -->
                        <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">@item.Title</h3>

                        <!-- Author Info -->
                        <div class="flex items-center mb-3">
                            <div class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center mr-2">
                                <span class="text-white text-xs font-medium">
                                    @(item.User?.UserName?.Substring(0, Math.Min(2, item.User.UserName.Length)).ToUpper() ?? "UN")
                                </span>
                            </div>
                            <span class="text-sm text-gray-600">by @(item.User?.UserName ?? "Unknown")</span>
                        </div>

                        <!-- Description -->
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="text-sm text-gray-600 mb-3 line-clamp-2">@item.Description</p>
                        }

                        <!-- Tags -->
                        @if (item.SavedTags != null && item.SavedTags.Any())
                        {
                            <div class="flex flex-wrap gap-1 mb-4">
                                @foreach (var tag in item.SavedTags.Take(3))
                                {
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        @tag
                                    </span>
                                }
                                @if (item.SavedTags.Count() > 3)
                                {
                                    <span class="text-xs text-gray-500">+@(item.SavedTags.Count() - 3) more</span>
                                }
                            </div>
                        }

                        <!-- Actions -->
                        <div class="flex items-center justify-between">
                        @*     <div class="flex items-center space-x-2 text-sm text-gray-500">
                                @if (item.DownloadCount.HasValue)
                                {
                                    <i class="fas fa-download"></i>
                                    <span>@item.DownloadCount</span>
                                }
                                @if (item.Rating.HasValue)
                                {
                                    <div class="flex items-center">
                                        <i class="fas fa-star text-yellow-400"></i>
                                        <span class="ml-1">@item.Rating.Value.ToString("F1")</span>
                                    </div>
                                }
                            </div> *@
                            <div class="flex space-x-2">

                                <a asp-controller="Forms" asp-action="Create" asp-route-TemplateId="@item.Id"
                                   class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 font-medium">
                                    Use Template
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!result.Any())
        {
            <div class="text-center py-12">
                <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-clipboard-list text-gray-400 text-2xl"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No templates found</h3>
                <p class="text-gray-600 mb-4">Get started by creating your first template</p>
                <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                    <i class="fas fa-plus mr-2"></i>
                    Create Template
                </button>
            </div>
        }

        @if (result.Count() >= 12)
        {
            <div class="text-center mt-12">
                <button class="inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    <i class="fas fa-plus mr-2"></i>
                    Load More Templates
                </button>
            </div>
        }
    </div>

    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</body>
</html>