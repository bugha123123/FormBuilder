@using FormBuilder.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Submission Details - FormBuilder</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-4">
                    <a href="/forms" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Forms
                    </a>
                    <div class="h-6 border-l border-gray-300"></div>
                    <h1 class="text-2xl font-bold text-gray-900">Form Submission #12345</h1>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <i class="fas fa-check-circle mr-1"></i>
                        Submitted
                    </span>
                </div>
                <div class="flex items-center space-x-3">
                    <button class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <i class="fas fa-download mr-2"></i>
                        Export
                    </button>
                    <button class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <i class="fas fa-share mr-2"></i>
                        Share
                    </button>
                </div>
            </div>
        </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Form Information Card -->
                <div class="bg-white shadow rounded-lg">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                            <i class="fas fa-info-circle mr-2 text-blue-500"></i>
                            Form Information
                        </h2>
                    </div>
                    <div class="px-6 py-4">
                        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Form ID</dt>
                                <dd class="mt-1 text-sm text-gray-900 font-mono">#12345</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Template</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        Contact Form Template
                                    </span>
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Submitted By</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    <div class="flex items-center">
                                        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center mr-3">
                                            <span class="text-white font-medium text-xs">JD</span>
                                        </div>
                                        <div>
                                            <div class="font-medium">John Doe</div>
                                            <div class="text-gray-500">john.doe@example.com</div>
                                        </div>
                                    </div>
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Submission Date</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    <div class="flex items-center">
                                        <i class="fas fa-calendar mr-2 text-gray-400"></i>
                                        December 13, 2024 at 3:45 PM UTC
                                    </div>
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>

                <!-- Form Answers Card -->
                <div class="bg-white shadow rounded-lg">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                            <i class="fas fa-clipboard-list mr-2 text-green-500"></i>
                            Form Answers
                        </h2>
                    </div>
                    <div class="px-6 py-4">
                        <div class="space-y-6">
                            <!-- Text Field Answer -->
                            <div class="border-l-4 border-blue-400 pl-4 py-2">
                                <div class="flex items-center justify-between mb-2">
                                    <dt class="text-sm font-medium text-gray-900">Full Name</dt>
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                        Text Field
                                    </span>
                                </div>
                                <dd class="text-base text-gray-700">John Doe</dd>
                            </div>

                            <!-- Email Field Answer -->
                            <div class="border-l-4 border-green-400 pl-4 py-2">
                                <div class="flex items-center justify-between mb-2">
                                    <dt class="text-sm font-medium text-gray-900">Email Address</dt>
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                        Email Field
                                    </span>
                                </div>
                                <dd class="text-base text-gray-700">
                                    <a href="mailto:john.doe@example.com" class="text-blue-600 hover:text-blue-800 flex items-center">
                                        <i class="fas fa-envelope mr-2"></i>
                                        john.doe@example.com
                                    </a>
                                </dd>
                            </div>

                            <!-- Phone Field Answer -->
                            <div class="border-l-4 border-purple-400 pl-4 py-2">
                                <div class="flex items-center justify-between mb-2">
                                    <dt class="text-sm font-medium text-gray-900">Phone Number</dt>
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                        Phone Field
                                    </span>
                                </div>
                                <dd class="text-base text-gray-700">
                                    <a href="tel:+1234567890" class="text-blue-600 hover:text-blue-800 flex items-center">
                                        <i class="fas fa-phone mr-2"></i>
                                        +1 (234) 567-8900
                                    </a>
                                </dd>
                            </div>

                            <!-- Select Field Answer -->
                            <div class="border-l-4 border-yellow-400 pl-4 py-2">
                                <div class="flex items-center justify-between mb-2">
                                    <dt class="text-sm font-medium text-gray-900">Inquiry Type</dt>
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                        Select Field
                                    </span>
                                </div>
                                <dd class="text-base text-gray-700">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                        <i class="fas fa-tag mr-2"></i>
                                        Technical Support
                                    </span>
                                </dd>
                            </div>

                            <!-- Textarea Field Answer -->
                            <div class="border-l-4 border-indigo-400 pl-4 py-2">
                                <div class="flex items-center justify-between mb-2">
                                    <dt class="text-sm font-medium text-gray-900">Message</dt>
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                        Textarea Field
                                    </span>
                                </div>
                                <dd class="text-base text-gray-700 leading-relaxed bg-gray-50 p-4 rounded-md">
                                    I'm experiencing issues with the form builder when trying to add conditional logic to my forms. The interface seems to freeze when I attempt to set up complex conditions. Could you please help me resolve this issue? I've tried clearing my browser cache and using different browsers, but the problem persists.
                                </dd>
                            </div>

                            <!-- Checkbox Field Answer -->
                            <div class="border-l-4 border-red-400 pl-4 py-2">
                                <div class="flex items-center justify-between mb-2">
                                    <dt class="text-sm font-medium text-gray-900">Services Interested In</dt>
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                        Checkbox Field
                                    </span>
                                </div>
                                <dd class="text-base text-gray-700">
                                    <div class="flex flex-wrap gap-2">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            <i class="fas fa-check mr-1"></i>
                                            Web Development
                                        </span>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            <i class="fas fa-check mr-1"></i>
                                            Technical Support
                                        </span>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                            <i class="fas fa-times mr-1"></i>
                                            Consulting
                                        </span>
                                    </div>
                                </dd>
                            </div>

                            <!-- File Upload Answer -->
                            <div class="border-l-4 border-pink-400 pl-4 py-2">
                                <div class="flex items-center justify-between mb-2">
                                    <dt class="text-sm font-medium text-gray-900">Attachments</dt>
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                        File Upload Field
                                    </span>
                                </div>
                                <dd class="text-base text-gray-700">
                                    <div class="space-y-2">
                                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
                                            <div class="flex items-center">
                                                <i class="fas fa-file-pdf text-red-500 mr-3"></i>
                                                <div>
                                                    <div class="font-medium">error-screenshot.pdf</div>
                                                    <div class="text-sm text-gray-500">2.3 MB</div>
                                                </div>
                                            </div>
                                            <button class="text-blue-600 hover:text-blue-800">
                                                <i class="fas fa-download"></i>
                                            </button>
                                        </div>
                                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
                                            <div class="flex items-center">
                                                <i class="fas fa-file-image text-blue-500 mr-3"></i>
                                                <div>
                                                    <div class="font-medium">form-issue.png</div>
                                                    <div class="text-sm text-gray-500">1.8 MB</div>
                                                </div>
                                            </div>
                                            <button class="text-blue-600 hover:text-blue-800">
                                                <i class="fas fa-download"></i>
                                            </button>
                                        </div>
                                    </div>
                                </dd>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Comments Section -->
                <div class="bg-white shadow rounded-lg" x-data="commentsSection()">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                                <i class="fas fa-comments mr-2 text-purple-500"></i>
                                Internal Comments
                            </h2>
                            <span class="text-sm text-gray-500" x-text="`${comments.length} comment${comments.length !== 1 ? 's' : ''}`"></span>
                        </div>
                    </div>

                    <!-- Add Comment Form -->
                    <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                        <form  class="space-y-4">
                            <div class="flex space-x-3">
                                <div class="flex-shrink-0">
                                    <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                                        <span class="text-white font-medium text-sm">AD</span>
                                    </div>
                                </div>
                                <div class="flex-1">
                                    <textarea 
                                        x-model="newComment.content"
                                        placeholder="Add an internal comment about this form submission..."
                                        rows="3"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none"
                                        required></textarea>
                                </div>
                            </div>
                            
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-4">
                                    <select x-model="newComment.priority" class="text-sm border border-gray-300 rounded-md px-3 py-1 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                        <option value="low">Low Priority</option>
                                        <option value="medium">Medium Priority</option>
                                        <option value="high">High Priority</option>
                                        <option value="urgent">Urgent</option>
                                    </select>
                                    
                                    <label class="flex items-center">
                                        <input type="checkbox" x-model="newComment.isInternal" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                        <span class="ml-2 text-sm text-gray-600">Internal only</span>
                                    </label>
                                </div>
                                
                                <div class="flex items-center space-x-2">
                                    <button type="button" class="px-3 py-1 text-sm text-gray-600 hover:text-gray-800">
                                        Cancel
                                    </button>
                                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                        <i class="fas fa-comment mr-2"></i>
                                        Add Comment
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Comments List -->
                    <div class="divide-y divide-gray-200">
                        <template x-for="comment in comments" :key="comment.id">
                            <div class="px-6 py-4">
                                <div class="flex space-x-3">
                                    <div class="flex-shrink-0">
                                        <div class="w-10 h-10 rounded-full flex items-center justify-center" 
                                             :class="comment.author.role === 'admin' ? 'bg-red-500' : comment.author.role === 'manager' ? 'bg-purple-500' : 'bg-blue-500'">
                                            <span class="text-white font-medium text-sm" x-text="comment.author.initials"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="flex-1">
                                        <div class="flex items-center space-x-2 mb-1">
                                            <h4 class="text-sm font-medium text-gray-900" x-text="comment.author.name"></h4>
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium"
                                                  :class="{
                                                      'bg-red-100 text-red-800': comment.author.role === 'admin',
                                                      'bg-purple-100 text-purple-800': comment.author.role === 'manager',
                                                      'bg-blue-100 text-blue-800': comment.author.role === 'user'
                                                  }"
                                                  x-text="comment.author.role.charAt(0).toUpperCase() + comment.author.role.slice(1)">
                                            </span>
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium"
                                                  :class="{
                                                      'bg-red-100 text-red-800': comment.priority === 'urgent',
                                                      'bg-orange-100 text-orange-800': comment.priority === 'high',
                                                      'bg-yellow-100 text-yellow-800': comment.priority === 'medium',
                                                      'bg-green-100 text-green-800': comment.priority === 'low'
                                                  }"
                                                  x-text="comment.priority.charAt(0).toUpperCase() + comment.priority.slice(1)">
                                            </span>
                                            <template x-if="comment.isInternal">
                                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                                    <i class="fas fa-lock mr-1"></i>
                                                    Internal
                                                </span>
                                            </template>
                                        </div>
                                        
                                        <p class="text-sm text-gray-700 mb-2" x-text="comment.content"></p>
                                        
                                        <div class="flex items-center space-x-4 text-xs text-gray-500">
                                            <span x-text="comment.timestamp"></span>
                                            <button  class="flex items-center space-x-1 hover:text-blue-600">
                                                <i class="fas fa-thumbs-up" :class="comment.liked ? 'text-blue-600' : ''"></i>
                                                <span x-text="comment.likes"></span>
                                            </button>
                                            <button  class="hover:text-blue-600">
                                                <i class="fas fa-reply mr-1"></i>
                                                Reply
                                            </button>
                                        </div>

                                        <!-- Reply Form -->
                                        <template x-if="comment.showReplyForm">
                                            <div class="mt-3 ml-4">
                                                <form class="space-y-2">
                                                    <textarea 
                                                        x-model="comment.replyContent"
                                                        placeholder="Write a reply..."
                                                        rows="2"
                                                        class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none text-sm"
                                                        required></textarea>
                                                    <div class="flex justify-end space-x-2">
                                                        <button type="button"  class="px-3 py-1 text-xs text-gray-600 hover:text-gray-800">
                                                            Cancel
                                                        </button>
                                                        <button type="submit" class="px-3 py-1 text-xs bg-blue-600 text-white rounded hover:bg-blue-700">
                                                            Reply
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </template>

                                        <!-- Replies -->
                                        <template x-if="comment.replies && comment.replies.length > 0">
                                            <div class="mt-3 ml-4 space-y-3">
                                                <template x-for="reply in comment.replies" :key="reply.id">
                                                    <div class="flex space-x-2">
                                                        <div class="flex-shrink-0">
                                                            <div class="w-8 h-8 rounded-full flex items-center justify-center"
                                                                 :class="reply.author.role === 'admin' ? 'bg-red-400' : reply.author.role === 'manager' ? 'bg-purple-400' : 'bg-blue-400'">
                                                                <span class="text-white font-medium text-xs" x-text="reply.author.initials"></span>
                                                            </div>
                                                        </div>
                                                        <div class="flex-1">
                                                            <div class="flex items-center space-x-2">
                                                                <h5 class="text-xs font-medium text-gray-900" x-text="reply.author.name"></h5>
                                                                <span class="text-xs text-gray-500" x-text="reply.timestamp"></span>
                                                            </div>
                                                            <p class="mt-1 text-xs text-gray-700" x-text="reply.content"></p>
                                                        </div>
                                                    </div>
                                                </template>
                                            </div>
                                        </template>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Quick Actions -->
                <div class="bg-white shadow rounded-lg">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
                    </div>
                    <div class="px-6 py-4 space-y-3">
                        <button class="w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                            <i class="fas fa-check mr-2"></i>
                            Mark as Processed
                        </button>
                        <button class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <i class="fas fa-user-plus mr-2"></i>
                            Assign to Team Member
                        </button>
                        <button class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <i class="fas fa-envelope mr-2"></i>
                            Send Email Response
                        </button>
                        <button class="w-full flex items-center justify-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            <i class="fas fa-archive mr-2"></i>
                            Archive Submission
                        </button>
                    </div>
                </div>

                <!-- Form Template Info -->
                <div class="bg-white shadow rounded-lg">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-medium text-gray-900">Template Information</h3>
                    </div>
                    <div class="px-6 py-4 space-y-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Template Name</dt>
                            <dd class="mt-1 text-sm text-gray-900">Contact Form Template</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Version</dt>
                            <dd class="mt-1 text-sm text-gray-900">v2.1.0</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Total Fields</dt>
                            <dd class="mt-1 text-sm text-gray-900">7 fields</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Category</dt>
                            <dd class="mt-1 text-sm text-gray-900">Customer Support</dd>
                        </div>
                    </div>
                </div>

                <!-- Submission Metadata -->
                <div class="bg-white shadow rounded-lg">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-medium text-gray-900">Submission Details</h3>
                    </div>
                    <div class="px-6 py-4 space-y-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">IP Address</dt>
                            <dd class="mt-1 text-sm text-gray-900 font-mono">192.168.1.100</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">User Agent</dt>
                            <dd class="mt-1 text-sm text-gray-900 truncate">Chrome 120.0.0.0</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Referrer</dt>
                            <dd class="mt-1 text-sm text-gray-900">https://example.com/contact</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Processing Time</dt>
                            <dd class="mt-1 text-sm text-gray-900">1.2 seconds</dd>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
</body>
</html>